.container {
    padding: 20rpx;
    height: 100vh;
    display: flex;
    flex-direction: column;
  }

  .section-title {
    font-weight: bold;
    margin: 20rpx 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .form-group {
    margin-bottom: 30rpx;
  }
  
  .form-row {
    display: flex;
    align-items: center;
    margin-bottom: 15rpx;
    flex-wrap: wrap;
  }
  
  .form-label {
    min-width: 120rpx;
    margin-right: 10rpx;
  }
  
  .form-input {
    flex: 1;
    border: 1rpx solid #eee;
    border-radius: 8rpx;
    padding: 12rpx;
    min-width: 200rpx;
  }

  .action-buttons {
    display: flex;
    justify-content: space-around;
    margin: 20rpx 0;
  }

  .subscription-list {
    margin-top: 20rpx;
    border-top: 1rpx solid #eee;
    padding-top: 10rpx;
  }
  
  .subscription-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10rpx;
    border-bottom: 1rpx dashed #eee;
  }

  .console-container {
    flex: 1;
    display: flex;
    flex-direction: column;
    margin-top: 20rpx;
  }
  
  .console-output {
    flex: 1;
    border: 1rpx solid #eee;
    padding: 10rpx;
    font-family: monospace;
    font-size: 24rpx;
    overflow-y: auto;
  }

  .log-normal {
    color: #333;
  }
  
  .log-error {
    color: #f44336;
  }
  
  .log-warning {
    color: #ff9800;
  }
  
  .log-success {
    color: #4caf50;
  }

  .btn-sm {
    font-size: 24rpx;
    padding: 0 15rpx;
    height: 60rpx;
    line-height: 60rpx;
  }

  .switch-wrapper {
    display: flex;
    align-items: center;
  }

.footer-section {
  margin-top: 20px;
  padding: 15px;
  background-color: #f5f5f5;
  border-radius: 5px;
  text-align: center;
}

.tool-title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 8px;
  color: #333;
}

.tool-info {
  font-size: 12px;
  color: #666;
  line-height: 1.5;
}

.tool-info text {
  display: block;
}